{% extends "EFormsBundle:Admin:leftSideBarBase.html.twig" %}

{% block rightsidebar %}
	{% if app.request.get('success') %}
		<div class="alert alert-success" role="alert">Formularul a fost salvat</div>
	{% endif %}
    <h1 class="page-header">Formulare active</h1>
	<div class="row forms-list">
		{% for item in data %}
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<div class="caption">
					<h3>{{ item.label|e|truncate(50) }}</h3>
					<p class="description">{{ item.description|e|truncate(160) }}</p>
					<p>
						<a href="{{ path('eforms_home_view', {id: item.id}) }}" class="btn btn-primary" role="button">
							<span class="glyphicon glyphicon-eye-open"></span> Vezi
						</a>
						<a href="#" class="btn btn-success" role="button"><span class="glyphicon glyphicon-pencil"></span> Editeaza</a>
						<a href="{{ path('eforms_admin_delete', {id: item.id}) }}" class="btn btn-danger clickConfirm" role="button"><span class="glyphicon glyphicon-remove"></span> Sterge</a>
					</p>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endblock %}
